@using BtcTransmuter.Data.Models
@using BtcTransmuter.Extension.BtcPayServer.Triggers.InvoiceStatusChanged
@model BtcTransmuter.Data.Entities.RecipeTrigger
@{
    var data = Model.Get<InvoiceStatusChangedTriggerParameters>();
}

<div>
    Btcpayserver Invoice Status Change to
    <kbd>@((data.Statuses?.Any() ?? false) ? string.Join(", ", data.Statuses) : "any status")</kbd>
    and additional status to <kbd>@((data.ExceptionStatuses?.Any() ?? false) ? string.Join(", ", data.ExceptionStatuses) : "any status")</kbd>

</div>