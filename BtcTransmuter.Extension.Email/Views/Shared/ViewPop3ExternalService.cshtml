@using BtcTransmuter.Extension.Email.ExternalServices
@using BtcTransmuter.Extension.Email.ExternalServices.Pop3
@model BtcTransmuter.Data.Entities.ExternalServiceData

@{
    var service = new Pop3Service(Model);
}

<dl class="dl-horizontal">
    <dt>
        Name
    </dt>
    <dd>
        @service.Name
    </dd>
    <dt>
        Server
    </dt>
    <dd>
        @service.Data.Server

    </dd>
    <dt>
        SSL
    </dt>
    <dd>
        @service.Data.SSL

    </dd>
    <dt>
        Username
    </dt>
    <dd>
        @service.Data.Username
    </dd>
    <dt>
        Last checked
    </dt>
    <dd>
        @(service.Data.LastCheck.HasValue? service.Data.LastCheck.Value.ToString("g"): "Never")
    </dd>
</dl>