@using BtcTransmuter.Data.Models
@using BtcTransmuter.Extension.NBXplorer.Triggers.NBXplorerNewTransaction
@model BtcTransmuter.Data.Entities.RecipeTrigger
@{
    var data = Model.Get<NBXplorerNewTransactionTriggerParameters>();
}

<div>
    New Transaction on @data.CryptoCode to 
    @if (!string.IsNullOrEmpty(data.Address))
    {
        <span>address <kbd>@data.Address</kbd></span>
    }
    @if (!string.IsNullOrEmpty(data.DerivationStrategy))
    {
        <span>derivation scheme <kbd>@data.DerivationStrategy</kbd></span>
    }
    at <kbd>@data.ConfirmationsRequired</kbd> confirmations
</div>